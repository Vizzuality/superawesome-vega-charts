{
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "autosize": {"type": "pad", "resize": true, "contains":"padding"},
  "signals": [
    {
      "name": "hover",
      "value": null,
      "on": [
        {
          "events": "@cell:mouseover",
          "update": "datum"
        },
        {
          "events": "@cell:mouseout",
          "update": "null"
        }
      ]
    }
  ],
  "data": [
    {
      "url": "https://api.resourcewatch.org/query/3a17f882-a1b3-47dc-a52b-e68d7d02aae5?sql=select%20year%20as%20x,%20annual%20as%20y%20from%20index_3a17f882a1b347dca52be68d7d02aae5%20order%20by%20year%20ASC",
      "name": "table",
      "format": {
        "type": "json",
        "property": "data"
      }
    },
    {
      "name":"dots",
      "source":"table",
      "transform":[
        {
          "type": "filter",
          "expr": "hover && hover.datum.x === datum.x"

        }
      ]
    },
    {
      "name": "regression",
      "source": "table",
      "transform": [
        {
          "type": "joinaggregate",
          "fields": [
            "x",
            "x",
            "x",
            "y",
            "x",
            "x"
          ],
          "ops": [
            "mean",
            "variance",
            "count",
            "mean",
            "min",
            "max"
          ],
          "as": [
            "mean_x",
            "variance_x",
            "count_x",
            "mean_y",
            "x0",
            "x1"
          ]
        },
        {
          "expr": "(datum.x - datum.mean_x) * (datum.y - datum.mean_y) / datum.count_x",
          "type": "formula",
          "as": "precovariance"
        },
        {
          "type": "joinaggregate",
          "fields":  [
              "precovariance"
            ],
            "ops":[
              "sum"
            ],
            "as":["covariance"]
        },
        {
          "expr": "datum.covariance / datum.variance_x",
          "type": "formula",
          "as": "a_factor"
        },
        {
          "expr": "datum.mean_y - datum.a_factor * datum.mean_x",
          "type": "formula",
          "as": "b_factor"
        },
        {
          "expr": "datum.a_factor * datum.x + datum.b_factor",
          "type": "formula",
          "as": "y"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "nice": false,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "x"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "y"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title":"ÂºF",
    "encode": {
      "title": {
        "update": {
          "dx": {"value": 0},
          "dy": {"value": 0},
          "x": {"value": 0},
          "y": {"value": -10},
          "align": {"value": "right"},
          "baseline": {"value": "bottom"},
          "angle": {"value": 0},
          "fontSize": {"value": 12}
        }
      }
    }
    }
  ],
  "marks": [
    {"name":"lines",
    "interactive": false,
      "type": "line",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "x"
          },
          "y": {
            "scale": "yscale",
            "field": "y"
          },
          "stroke": {
            "value": "#c34545"
          },
          "strokeJoin":{"value":"round"}
        },
        "update": {
          "strokeOpacity": {
            "value": 1
          }
        }
      }
    },
    {
      "type": "rule",
      "interactive": false,
      "from": {
        "data": "regression"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "x0"
          },
          "x2": {
            "scale": "xscale",
            "field": "x1"
          },
          "y": {
            "scale": "yscale",
            "field": "mean_y"
          },
          "y2": {
            "scale": "yscale",
            "field": "mean_y"
          },
          "stroke": {
            "value": "#000"
          },
           "strokeOpacity": {
            "value": 1
          }
        }
      }
    },
    {
      "type": "line",
      "interactive": false,
      "from": {
        "data": "regression"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "x"
          },
          "y": {
            "scale": "yscale",
            "field": "y"
          },
          "stroke": {
            "value": "#263e57"
          }
        },
        "update": {
          "strokeOpacity": {
            "value": 1
          }
        }
      }
    },
    {
      "name": "points",
      "interactive": false,
      "type": "symbol",
      "from": {"data": "dots"},
      "encode": {
        "enter": {
            "stroke": {
            "value": "#c34545"
          },
          "fill": {
            "value": "#fff"
          },
          "x": { "scale": "xscale", "field": "x" },
          "y": { "scale": "yscale", "field": "y" }
        },
        "update": {
          "opacity": { "value": 1 }
        }
      }
    },
    {
      "name": "cell",
      "type": "path",
      "from": { "data": "lines" },
      "transform": [
        {
          "type": "voronoi",
          "x": "datum.x",
          "y": "datum.y",
          "size": [
            { "signal": "width" },
            { "signal": "height" }
          ]
        }
      ],
      "encode": {
        "update": {
            "fill":{"value":"red"},
          "path": { "field": "path" },
          "opacity": { "value": 0 }
        }
      }
    }
  ]
}