{
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "autosize": {"type": "pad", "resize": true, "contains":"padding"},
  "signals": [
    {
      "name": "hover",
      "value": null,
      "on": [
        {
          "events": "@cell:mouseover",
          "update": "datum"
        },
        {
          "events": "@cell:mouseout",
          "update": "null"
        }
      ]
    }
  ],
  "data": [
    {
      "url": "https://api.resourcewatch.org/query/3feaf26c-42c8-43ce-b1b5-07a02a773c36?sql=select * from index_3feaf26c42c843ceb1b507a02a773c36 order by date asc",
      "name": "table",
      "format": {
        "type": "json",
        "property": "data"
      },
      "transform": [
        {
          "expr": "datum.date < 2010 ? ((datum.HST*1.8)+32) : ((datum.CCSM4_rcp85*1.8)+32)",
          "type": "formula",
          "as": "y"
        },
        {
          "expr": "datum.date < 2010 ? null : ((datum.min*1.8)+32)",
          "type": "formula",
          "as": "y0"
        },
        {
          "expr": "datum.date < 2010 ? null : ((datum.max*1.8)+32)",
          "type": "formula",
          "as": "y1"
        },
        {"type": "project", "fields": ["date", "y", "y0","y1"], "as": ["x", "y", "y0","y1"]},
        {
          "expr": "datum.x < 2010 ? 'Historic' : 'CCSM4'",
          "type": "formula",
          "as": "c"
        }
      ]
    },
    {
      "name": "legend",
      "values": [
        {
          "cat": "Historic"
        },
        {
          "cat": "CCSM4"
        },
        {
          "cat": "Models amplitude"
        }
      ]
    },
    {
      "name": "dots",
      "source": "table",
      "transform": [
        {
          "type": "filter",
          "expr": "hover && hover.datum.x === datum.x"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "nice": false,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "x"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "y"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": ["#efa600","#1a6d9e","#CEE2EB"],
      "domain": {
        "data": "legend",
        "field": "cat"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "ÂºF",
      "encode": {
        "title": {
          "update": {
            "dx": {
              "value": 0
            },
            "dy": {
              "value": 0
            },
            "x": {
              "value": 0
            },
            "y": {
              "value": -10
            },
            "align": {
              "value": "right"
            },
            "baseline": {
              "value": "bottom"
            },
            "angle": {
              "value": 0
            },
            "fontSize": {
              "value": 12
            }
          }
        }
      }
    }
  ],
  "marks": [
    {
      "name": "datarea-modeled",
      "interactive": false,
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          
          "defined": {
            "signal": "datum.y0!==null"
          },
          "x": {
            "scale": "xscale",
            "field": "x"
          },
          "y": {
            "scale": "yscale",
            "field": "y0"
          },
          "y2": {
            "scale": "yscale",
            "field": "y1"
          },
          "fill": {
            "value": "#CEE2EB"
          },
          
          "strokeJoin": {
            "value": "round"
          }
        },
        "update": {
          "strokeOpacity": {
            "value": 1
          }
        }
      }
    },
    {
      "name": "lines",
"type": "group",
"from": {
"facet": {
          "name": "linesc",
          "data": "table",
          "groupby": "c"
        }
},
"marks": [
  
    {
      
      "interactive": false,
      "type": "line",
      "from": {
        "data": "linesc"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "x"
          },
          "y": {
            "scale": "yscale",
            "field": "y"
          },
          "stroke": {
            "scale": "color",
            "field": "c"
          },
          "strokeJoin": {
            "value": "round"
          }
        },
        "update": {
          "strokeOpacity": {
            "value": 1
          }
        }
      }
    }
    ]
    },
    {
      "name": "points",
      "interactive": false,
      "type": "symbol",
      "from": {
        "data": "dots"
      },
      "encode": {
        "enter": {
          "fill": {
            "value": "#c34545"
          },
          "stroke": {
            "value": "#fff"
          },
          "x": {
            "scale": "xscale",
            "field": "x"
          },
          "y": {
            "scale": "yscale",
            "field": "y"
          }
        },
        "update": {
          "opacity": {
            "value": 1
          }
        }
      }
    },
    {
      "name": "pointss",
      "interactive": false,
      "type": "symbol",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "x"
          },
          "y": {
            "scale": "yscale",
            "field": "y"
          }
        },
        "update": {
          "opacity": {
            "value": 0
          }
        }
      }
    },
    {
      "name": "cell",
      "type": "path",
      "from": {
        "data": "pointss"
      },
      "transform": [
        {
          "type": "voronoi",
          "x": "datum.x",
          "y": "datum.y",
          "size": [
            {
              "signal": "width"
            },
            {
              "signal": "height"
            }
          ]
        }
      ],
      "encode": {
        "update": {
          "fill": {
            "value": "red"
          },
          "path": {
            "field": "path"
          },
          "opacity": {
            "value": 0
          }
        }
      }
    }
  ],
  "legends": [
  {
    "fill": "color",
    "orient":"top-left",
    "offset":{"signal":"width<200? 0:10"},
    "encode": {
      "symbols": {
        "update": {
          "shape":{
            "value":"square"
          },
          "stroke": {"value": "transparent"},
           "size": {"value": 40}
        }
      },
      "legend": {
        "update": {
          "stroke": {"value": "transparent"},
          "strokeWidth": {"value": 1.5}
        }
      }
    }
  }
]
}