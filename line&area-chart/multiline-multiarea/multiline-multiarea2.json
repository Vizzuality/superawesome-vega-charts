{
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "width": 500,
  "height": 200,
  "padding": 5,
  "signals": [
    {
      "name": "hover",
      "value": null,
      "on": [
        {
          "events": "@cell:mouseover",
          "update": "datum"
        },
        {
          "events": "@cell:mouseout",
          "update": "null"
        }
      ]
    }
  ],
  "data": [
    {
      "url": "https://api.resourcewatch.org/query/c2d418e1-6fef-4204-863c-090d0461334d?sql=select%20value%20as%20y,%20date%20as%20x,%20type from%20index_c2d418e16fef4204863c090d0461334d%20order%20by%20date%20ASC",
      "name": "table",
      "format": {
        "type": "json",
        "property": "data"
      },
      "transform": [
        {
          "expr": "test(/rcp85/gi, datum.type) ? 'rcp85' : 'rcp45'",
          "type": "formula",
          "as": "c"
        },
        {
  "type": "joinaggregate",
  "fields": ["y", "y"],
  "ops": ["min", "max"],
  "groupby":["c","x"],
  "as": ["y0", "y1"]
},
     {"type": "filter", "expr": "test(/mean/gi, datum.type)"}   
      ]
    },
    {
      "name": "legend",
      "values": [
        {
          "cat": "Mean RCP 4.5"
        },
        {
          "cat": "Mean RCP 8.5"
        }
      ]
    },
    {
      "name": "dots",
      "source": "table",
      "transform": [
        {
          "type": "filter",
          "expr": "hover && hover.datum.x === datum.x"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "nice": false,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "x"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
         "fields": [
           {
        "data": "table",
        "field": "y"},
        {
        "data": "table",
        "field": "y0"},
        {
        "data": "table",
        "field": "y1"}
        ]
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": ["#efa600","#25b5cd"],
      "domain": {
        "data": "legend",
        "field": "cat"
      }
    }
  ],
  "axes": [
    {  "title": "Years",
      "orient": "bottom",
      "scale": "xscale"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "ÂºC",
      "encode": {
        "title": {
          "update": {
            "dx": {
              "value": 0
            },
            "dy": {
              "value": 0
            },
            "x": {
              "value": 0
            },
            "y": {
              "value": -10
            },
            "align": {
              "value": "right"
            },
            "baseline": {
              "value": "bottom"
            },
            "angle": {
              "value": 0
            }
          }
        }
      }
    }
  ],
  "marks": [
    {
      "name": "lines",
"type": "group",
"from": {
"facet": {
          "name": "linesc",
          "data": "table",
          "groupby": "c"
        }
},
"marks": [
    {
      "name": "datarea-modeled",
      "interactive": false,
      "type": "area",
      "from": {
        "data": "linesc"
      },
      "encode": {
        "enter": {
          
          "defined": {
            "signal": "datum.y0!==null"
          },
          "x": {
            "scale": "xscale",
            "field": "x"
          },
          "y": {
            "scale": "yscale",
            "field": "y0"
          },
          "y2": {
            "scale": "yscale",
            "field": "y1"
          },
         "fill": {
            "scale": "color",
            "field": "c"
          },
          
          "strokeJoin": {
            "value": "round"
          }
        },
        "update": {
          "opacity": {
            "value": 0.2
          }
        }
      }
    },
  
    {
      
      "interactive": false,
      "type": "line",
      "from": {
        "data": "linesc"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "x"
          },
          "y": {
            "scale": "yscale",
            "field": "y"
          },
          "stroke": {
            "scale": "color",
            "field": "c"
          },
          "strokeJoin": {
            "value": "round"
          }
        },
        "update": {
          "strokeOpacity": {
            "value": 1
          }
        }
      }
    }
    ]
    },
    {
      "name": "points",
      "interactive": false,
      "type": "symbol",
      "from": {
        "data": "dots"
      },
      "encode": {
        "enter": {
          "fill": {
            "value": "#c34545"
          },
          "stroke": {
            "value": "#fff"
          },
          "x": {
            "scale": "xscale",
            "field": "x"
          },
          "y": {
            "scale": "yscale",
            "field": "y"
          }
        },
        "update": {
          "opacity": {
            "value": 1
          }
        }
      }
    },
    {
      "name": "pointss",
      "interactive": false,
      "type": "symbol",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "x"
          },
          "y": {
            "scale": "yscale",
            "field": "y"
          }
        },
        "update": {
          "opacity": {
            "value": 0
          }
        }
      }
    },
    {
      "name": "cell",
      "type": "path",
      "from": {
        "data": "pointss"
      },
      "transform": [
        {
          "type": "voronoi",
          "x": "datum.x",
          "y": "datum.y",
          "size": [
            {
              "signal": "width"
            },
            {
              "signal": "height"
            }
          ]
        }
      ],
      "encode": {
        "update": {
          "fill": {
            "value": "red"
          },
          "path": {
            "field": "path"
          },
          "opacity": {
            "value": 0
          }
        }
      }
    }
  ],
  "legends": [
  {
    "fill": "color",
    "orient":"top-left",
    "offset":{"signal":"width<200? 0:10"},
    "encode": {
      "symbols": {
        "update": {
          "shape":{
            "value":"square"
          },
          "stroke": {"value": "transparent"},
           "size": {"value": 40}
        }
      },
      "legend": {
        "update": {
          "stroke": {"value": "transparent"},
          "strokeWidth": {"value": 1.5}
        }
      }
    }
  }
]
}